{
  // THEME
  "workbench.colorTheme": "Catppuccin Macchiato",
  "workbench.iconTheme": "catppuccin-macchiato",
  "catppuccin.accentColor": "blue",
  "editor.fontFamily": "JetBrainsMonoNL Nerd Font Mono, Consolas, 'Courier New', monospace",
  "catppuccin.customUIColors": {
    "macchiato": {
      "list.focusOutline": "surface2"
    }
  },

  // UI TWEAKS
  "accessibility.dimUnfocused.enabled": true,
  "accessibility.dimUnfocused.opacity": 0.5,
  "window.menuBarVisibility": "compact",
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "workbench.activityBar.location": "bottom",
  "workbench.startupEditor": "none",
  "window.title": "${dirty}${workspaceFolder}${separator}${rootNameShort}",

  // EDITOR
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.quickSuggestions": { "strings": true },
  "editor.stickyScroll.enabled": false,
  "editor.minimap.enabled": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "smooth",
  "editor.smoothScrolling": true,
  "editor.lineNumbers": "relative",
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,

  // EXPLORER
  "explorer.compactFolders": false,
  "workbench.tree.enableStickyScroll": false,
  "workbench.list.smoothScrolling": true,

  // BREADCRUMBS
  "breadcrumbs.enabled": false,
  "breadcrumbs.icons": false,
  "breadcrumbs.showFiles": false,
  "breadcrumbs.showArrays": false,
  "breadcrumbs.showBooleans": false,
  "breadcrumbs.showClasses": false,
  "breadcrumbs.showConstants": false,
  "breadcrumbs.showConstructors": false,
  "breadcrumbs.showEnumMembers": false,
  "breadcrumbs.showEnums": false,
  "breadcrumbs.showEvents": false,
  "breadcrumbs.showFields": false,
  "breadcrumbs.showFunctions": false,
  "breadcrumbs.showInterfaces": false,
  "breadcrumbs.showKeys": false,
  "breadcrumbs.showStrings": false,
  "breadcrumbs.showModules": false,
  "breadcrumbs.showNamespaces": false,
  "breadcrumbs.showNull": false,
  "breadcrumbs.showNumbers": false,
  "breadcrumbs.showObjects": false,
  "breadcrumbs.showOperators": false,
  "breadcrumbs.showPackages": false,
  "breadcrumbs.showProperties": false,
  "breadcrumbs.showStructs": false,
  "breadcrumbs.showTypeParameters": false,
  "breadcrumbs.showVariables": false,
  "breadcrumbs.showMethods": false,

  // TERMINAL
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.smoothScrolling": true,

  // DEFAULT FORMATTER
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // OTHER
  "files.associations": {
    "*.json": "jsonc"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "redhat.telemetry.enabled": false,

  // =======================================
  // ============! EXTENSIONS !=============
  // =======================================

  // VIM
  "vim.leader": "<space>",
  "vim.useCtrlKeys": false,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.files.save"],
      "silent": true
    },
    {
      "before": ["<leader>", "F"],
      "commands": ["actions.find"],
      "silent": true
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["editor.action.formatDocument"],
      "silent": true
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"],
      "silent": true
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"],
      "silent": true
    },
    {
      "before": ["u"],
      "commands": ["undo"],
      "silent": true
    },
    {
      "before": ["U"],
      "commands": ["redo"],
      "silent": true
    },

    // center after jump
    {
      "before": ["<C-u>"],
      "after": ["<C-u>", "z", "z"]
    },
    {
      "before": ["<C-d>"],
      "after": ["<C-d>", "z", "z"]
    },
    {
      "before": ["n"],
      "after": ["n", "z", "z"]
    },
    {
      "before": ["N"],
      "after": ["N", "z", "z"]
    },
    {
      "before": ["*"],
      "after": ["*", "z", "z"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"],
      "silent": true
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"],
      "silent": true
    },
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "_", "d", "P"]
    }
  ],

  // REACT SNIPPENTS
  "reactSnippets.settings.importReactOnTop": false,

  // STYLELINT
  "stylelint.validate": ["css", "scss"],

  // I18N-ALLY
  "i18n-ally.annotations": false
}
