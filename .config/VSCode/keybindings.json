[
  // ==========================
  // ======= VIEW FOCUS =======
  // ==========================
  {
    "key": "ctrl+i",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    "key": "ctrl+o",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "ctrl+'",
    "command": "workbench.files.action.focusFilesExplorer"
  },
  {
    "key": "ctrl+shift+c",
    "command": "workbench.view.scm"
  },

  // ==========================
  // ========= EDITOR =========
  // ==========================

  // NAVIGATION
  {
    "key": "ctrl+h",
    "command": "workbench.action.previousEditorInGroup"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.nextEditorInGroup"
  },
  {
    "key": "ctrl+shift+h",
    "command": "workbench.action.moveEditorLeftInGroup"
  },
  {
    "key": "ctrl+shift+l",
    "command": "workbench.action.moveEditorRightInGroup"
  },
  {
    "key": "ctrl+shift+v",
    "command": "workbench.action.splitEditor"
  },
  {
    "key": "ctrl+alt+l",
    "command": "workbench.action.focusRightGroup"
  },
  {
    "key": "ctrl+alt+h",
    "command": "workbench.action.focusLeftGroup"
  },
  {
    "key": "ctrl+shift+alt+h",
    "command": "workbench.action.moveEditorToLeftGroup"
  },
  {
    "key": "ctrl+shift+alt+l",
    "command": "workbench.action.moveEditorToRightGroup"
  },

  // RESIZE
  {
    "key": "ctrl+alt+p",
    "command": "workbench.action.increaseViewWidth",
    "when": "!terminalFocus && !sideBarFocus"
  },
  {
    "key": "ctrl+alt+u",
    "command": "workbench.action.decreaseViewWidth",
    "when": "!terminalFocus && !sideBarFocus"
  },
  {
    "key": "ctrl+alt+o",
    "command": "workbench.action.increaseViewHeight",
    "when": "!terminalFocus && !sideBarFocus"
  },
  {
    "key": "ctrl+alt+i",
    "command": "workbench.action.decreaseViewHeight",
    "when": "!terminalFocus && !sideBarFocus"
  },

  // MOVE LINES
  {
    "key": "ctrl+j",
    "command": "editor.action.moveLinesDownAction",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+k",
    "command": "editor.action.moveLinesUpAction",
    "when": "editorFocus"
  },

  // SUGGESTION SWITCH
  {
    "key": "ctrl+j",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetVisible || inCommandsPicker"
  },
  {
    "key": "ctrl+k",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetVisible || inCommandsPicker"
  },

  // QUICK FIX SUGGESTION SWITCH
  {
    "key": "ctrl+j",
    "command": "selectNextCodeAction",
    "when": "codeActionMenuVisible"
  },
  {
    "key": "ctrl+k",
    "command": "selectPrevCodeAction",
    "when": "codeActionMenuVisible"
  },

  // ==========================
  // ======== EXPLORER ========
  // ==========================
  {
    "key": "r",
    "command": "renameFile",
    "when": "!inputFocus && filesExplorerFocus"
  },
  {
    "key": "n",
    "command": "explorer.newFile",
    "when": "!inputFocus && filesExplorerFocus"
  },
  {
    "key": "shift+n",
    "command": "explorer.newFolder",
    "when": "!inputFocus && filesExplorerFocus"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "!inputFocus && filesExplorerFocus"
  },
  {
    "key": "x",
    "command": "filesExplorer.cut",
    "when": "!inputFocus && filesExplorerFocus"
  },
  {
    "key": "p",
    "command": "filesExplorer.paste",
    "when": "!inputFocus && filesExplorerFocus"
  },
  {
    "key": "c",
    "command": "workbench.files.action.collapseExplorerFolders",
    "when": "!inputFocus && filesExplorerFocus"
  },
  {
    "key": "ctrl+shift+s",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "ctrl+alt+p",
    "command": "workbench.action.increaseViewSize",
    "when": "sideBarFocus"
  },
  {
    "key": "ctrl+alt+u",
    "command": "workbench.action.decreaseViewSize",
    "when": "sideBarFocus"
  },
  {
    "command": "runCommands",
    "key": "enter",
    "args": {
      "commands": [
        "explorer.openAndPassFocus",
        "workbench.action.moveEditorToFirstGroup",
        "workbench.action.toggleSidebarVisibility"
      ]
    },
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsFolder && !inputFocus"
  },

  // ==========================
  // ======== TERMINAL ========
  // ==========================
  {
    "key": "ctrl+n",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+w",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+alt+h",
    "command": "workbench.action.terminal.focusPreviousPane",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+alt+l",
    "command": "workbench.action.terminal.focusNextPane",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+v",
    "command": "workbench.action.terminal.split",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+alt+v",
    "command": "workbench.action.terminal.unsplit",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+u",
    "command": "workbench.action.terminal.scrollUp",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+d",
    "command": "workbench.action.terminal.scrollDown",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+alt+i",
    "command": "workbench.action.terminal.resizePaneDown",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+alt+o",
    "command": "workbench.action.terminal.resizePaneUp",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "\u001b[A" },
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "\u001b[B" },
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+/",
    "command": "workbench.action.terminal.rename",
    "when": "terminalFocus"
  },

  // ==========================
  // ========== OTHER =========
  // ==========================

  // COMMAND PALETTE SUGGESTION SWITCH
  {
    "key": "ctrl+k",
    "command": "workbench.action.quickOpenSelectPrevious",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.quickOpenSelectNext",
    "when": "inQuickOpen"
  },

  // OPEN SETTINGS/KEYBINDINGS JSON
  {
    "key": "ctrl+,",
    "command": "workbench.action.openSettingsJson"
  },
  {
    "key": "ctrl+shift+,",
    "command": "workbench.action.openGlobalKeybindingsFile"
  },

  // OPEN FOLDER
  {
    "key": "ctrl+shift+f",
    "command": "workbench.action.files.openFileFolder"
  },

  // VIM REMAP
  {
    "key": "ctrl+u",
    "command": "vim.remap",
    "when": "editorTextFocus && vim.active && !inDebugRepl",
    "args": {
      "after": ["<C-u>"]
    }
  },

  // ==========================
  // == DISABLED KEYBINDINGS ==
  // ==========================

  {
    "key": "tab",
    "command": "-acceptSelectedSuggestion"
  },
  {
    "key": "enter",
    "command": "-explorer.openAndPassFocus",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsFolder && !inputFocus"
  }
]
